<!--   			</property> -->
<!--  		</bean> -->
    </mvc:interceptors>
<!--  <bean id="authenticationInterceptor" class="com.claropr.identityportal.security.AuthenticationInterceptor" /> -->

<bean class="org.springframework.web.servlet.handler.SimpleMappingExceptionResolver">
    <property name="exceptionMappings">
        <props>
            <prop key="org.springframework.security.AccessDeniedException">/security/denied</prop>
            <prop key="org.springframework.orm.hibernate3.HibernateOptimisticLockingFailureException">/security/denied</prop>
        </props>
    </property>
    <property name="order" value="0"/>
</bean>

<!-- <bean class="package.to.your.handler.DefaultExceptionResolver"> -->
